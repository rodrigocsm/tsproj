{
    "name": "tsproj",
    "version": "1.0.0",
    "description": "Projeto para aprender a typescript em conjunto com o nodejs",
    "main": "index.js",
    "scripts": {
        "test": "mocha -r ts-node/register tests/*.test.ts",
        "test:watch": "mocha -r ts-node/register --watch --watch-files ./src,./tests tests/*.test.ts",
        "dev": "nodemon --watch src/ --exec ts-node src/index.ts -e ts",
        "build": "tsc",
        "prod": "npm run build && node dist/src/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rodrigocsm/tsproj.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rodrigocsm/tsproj/issues"
    },
    "homepage": "https://github.com/rodrigocsm/tsproj#readme",
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/chai-like": "^1.1.0",
        "@types/chai-things": "0.0.34",
        "@types/dotenv": "^8.2.0",
        "@types/isbn-utils": "^1.1.3",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.30",
        "@types/node": "^14.0.18",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "chai": "^4.2.0",
        "chai-like": "^1.1.1",
        "chai-things": "^0.2.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "json-schema-to-typescript": "^9.1.1",
        "mocha": "^8.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "fastify": "^2.15.1",
        "fastify-blipp": "^2.3.1",
        "fastify-plugin": "^1.6.1",
        "fastify-swagger": "^2.6.0",
        "isbn-utils": "^1.1.0",
        "mongoose": "^5.9.22"
    }
}
